// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ここにデータベースのスキーマを記述します。
model User {
  userId         String @id @unique @default(uuid())
  name           String
  hashedPassword String
  Files          File[]
}

model File {
  id        Int      @id @default(autoincrement())
  name      String // ファイル名
  uploader  User     @relation(fields: [userId], references: [userId]) // ファイルをアップロードしたユーザー
  userId    String // ファイルをアップロードしたユーザーのID
  size      Int // ファイルのサイズ
  path      String // ファイルの保存パス
  createdAt DateTime @default(now()) // ファイルがアップロードされた日時
  updatedAt DateTime @updatedAt // ファイルが最後に更新された日時
}
